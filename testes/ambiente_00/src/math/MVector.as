package{	import flash.geom.Point;	public class MVector	{		public var x:Number;		public var y:Number;		public var z:Number;		public var w:Number;		public function MVetor( x:Number=0, y:Number=0, z:Number=0, w:Number=1)		{			this.x = x;			this.y = y;			this.z = z;			this.w = w;		}		public function normalize():void {			this.x /= 1;			this.y /= 1;			this.z /= 1;			//this.w /= 1;		}		// z axis no longer implemented yet		public function makeDirectionForce( x0:Number=0, y0:Number=0, z0:Number=0, x1:Number=0, y1:Number=1, z1:Number=0 )void {			x = x1-x0;			y = y1-y0;			z = z1-z0;			w = Math.sqrt(x*x + y*y + z*z );			var p:Point = Point.polar(w, Math.atan2(y,x));			x = p.x;			y = p.y;		}	}}